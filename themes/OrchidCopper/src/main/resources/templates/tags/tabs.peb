<div class="tabs">
  <ul data-tabs="{{ tag.id }}">
  {% for tab in tag.tabs %}
    <li {% if loop.first %}class="is-active"{% endif %}><a>{{ tab.title }}</a></li>
  {% endfor %}
  </ul>
</div>
<div data-panes="{{ tag.id }}">
{% for tab in tag.tabs %}
  <div class="{% if loop.first %}is-block{% endif %} tab-hidden content is-medium-tablet is-large-desktop">{{ tab.content | raw }}</div>
{% endfor %}
</div>
